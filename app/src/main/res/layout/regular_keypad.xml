<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/colorBlack"
        android:orientation="horizontal">

        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway"
            android:src="@drawable/sine"
            android:tint="@color/colorPurple"
            android:text="sin"
            android:textColor="@color/colorPurple"
            android:textSize="20sp" />

        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/cos"
            android:tint="@color/colorPurple"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/tan"
            android:tint="@color/colorPurple"
            android:text="%"
            android:textColor="@color/colorPurple"
            android:textSize="18sp" />

        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/log"
            android:tint="@color/colorPurple"
            android:text="/"
            android:textColor="@color/colorPurple"
            android:textSize="18sp" />
        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/log10"
            android:tint="@color/colorPurple"
            android:text="/"
            android:textColor="@color/colorPurple"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/colorBlack"
        android:orientation="horizontal">

        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway"
            android:src="@drawable/square_root_of_x_mathematical_signs"
            android:tint="@color/colorPurple"
            android:text="sqrt("
            android:textColor="@color/colorPurple"
            android:textSize="20sp" />

        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/power"
            android:text="^"
            android:tint="@color/colorPurple"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/pi"
            android:tint="@color/colorPurple"
            android:text="3.1416"
            android:textColor="@color/colorPurple"
            android:textSize="18sp" />

        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/ic_leftbracket"
            android:tint="@color/colorPurple"
            android:text="3.1416"
            android:textColor="@color/colorPurple"
            android:textSize="18sp" />
        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/ic_rightbracket"
            android:tint="@color/colorPurple"
            android:text="3.1416"
            android:textColor="@color/colorPurple"
            android:textSize="18sp" />






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/colorBlack"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway"
            android:src="@drawable/ic_ac"
            android:tint="@color/colorPurple"
            android:text="C"
            android:textColor="@color/colorPurple"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/backspace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/ic_baseline_backspace_24"
            android:tint="@color/colorPurple"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/mod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/mod"
            android:tint="@color/colorPurple"
            android:text="%"
            android:textColor="@color/colorPurple"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnDivide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/div"
            android:tint="@color/colorPurple"
            android:text="/"
            android:textColor="@color/colorPurple"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBlack"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway"
            android:stateListAnimator="@null"
            android:text="1"
            android:src="@drawable/one"
            android:tint="@color/white"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/two"
            android:tint="@color/white"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:text="3"
            android:src="@drawable/three"
            android:tint="@color/white"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnMultiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/mul"
            android:tint="@color/colorPurple"
            android:text="*"
            android:textColor="@color/colorPurple"
            android:textSize="40sp"
            android:textAlignment="center" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBlack"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/four"
            android:tint="@color/white"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/five"
            android:tint="@color/white"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/six"
            android:tint="@color/white"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/minus"
            android:tint="@color/colorPurple"
            android:text="-"
            android:textColor="@color/colorPurple"
            android:textSize="32sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBlack"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/seven"
            android:tint="@color/white"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/eight"
            android:tint="@color/white"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/nine"
            android:tint="@color/white"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/plus"
            android:tint="@color/colorPurple"
            android:text="+"
            android:textColor="@color/colorPurple"
            android:textSize="32sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBlack"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn00"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/ic_rotate"
            android:tint="@color/colorPurple"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/zero"
            android:tint="@color/white"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnDot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:fontFamily="@font/raleway_medium"
            android:stateListAnimator="@null"
            android:src="@drawable/decimal"
            android:tint="@color/white"
            android:text="."
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btnEqual"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/eq"
                android:tint="@color/white"
                android:layout_marginBottom="2dp"
                android:background="@drawable/btn_equal_bg"
                android:fontFamily="@font/raleway_medium"
                android:stateListAnimator="@null"
                android:text="="
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>